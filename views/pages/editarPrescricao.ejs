            <a href="/acolhido/<%= acolhido.id %>/prescricao/<%= prescricao.id %>/medicamento/create"> Adicionar medicamento </a>
        </div>
    <% } %>        

    <%- include partials/tabelaMedicamento.ejs %>

    <% if (user.tipo ==="clinica"  || user.tipo ==="neurologista") { %>
