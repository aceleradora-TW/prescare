<%- contentFor('body') %>
    <section class="section">
        <main class="main">
            <h1 class="titulo-lista-acolhidos">Lista de Acolhidos</h1>
            <ul class="lista-acolhidos">
                <%for (acolhidos of acolhidos){%>
                    <li>
                        <a href="/acolhido/<%= acolhidos.id %>">
                            <%= acolhidos.nome %>
                                <div>
                                    <span>
                                        Revisar em:
                                        <%= acolhidos.prescricaos[0] ? acolhidos.prescricaos[0].validade.split("-").reverse().join("/") : '---' %> | Atualizado em:
                                            <%= acolhidos.prescricaos[0] ? moment(acolhidos.prescricaos[0].updated_at).format('DD/MM/YYYY HH:mm:ss') : '---' %>
                                    </span>
                                </div>
                        </a>
                    </li>
                    <% } %>
            </ul>
        </main>
    </section>
    <%if (tipoDoUsuario === "clinica" || tipoDoUsuario === "neurologista") { %>
        <a href="/acolhido/novo"> Inserir Novo Acolhido</a>
        <% } %>