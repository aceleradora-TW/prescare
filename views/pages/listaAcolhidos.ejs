<%- contentFor('body') %>
    <section class="section">
        <main class="main">
            <h1 class="titulo-lista-acolhidos">Lista de Acolhidos</h1>
            <ul class="lista-acolhidos">
                <%for (acolhidos of acolhidos){%>
                    <li>
                        <a href="/acolhido/<%= acolhidos.id %>">
                            <%= acolhidos.nome %>
                            <div>
                                <span> 
                                    Revisar em:  <%= acolhidos.prescricaos[0] ? acolhidos.prescricaos[0].validade.split("-").reverse().join("/") : '' %> |
                                    Atualizado em: <span id="searchDateTime"></span>
                                    <script>momentDateTime("<%= acolhidos.prescricaos[0] ? acolhidos.prescricaos[0].updated_at : '' %>")</script>
                                    <%= acolhidos.prescricaos[0] ? acolhidos.prescricaos[0].updated_at : '' %>
                                </span>
                            </div>
                        </a>
                    </li>
                    <% } %>
            </ul>
        </main>
    </section>

    <%if (tipoDoUsuario === "medica") { %>

        <a href="/acolhido/novo"> Inserir Novo Acolhido</a>

    <% } %>