<%- contentFor('body') %>
<div class="botao-voltar">
	<a href="/acolhido/<%=acolhidoId%>/prescricao/<%=prescricaoId%>/edit">Voltar</a>
</div>

<div class="cabecalho-telas">
	<%- include partials/cabecalhoTelas.ejs %>
</div>

<div class="medicamento">
	<h1>Dieta</h1>

	<form action="<%= updateUrl %>" method="POST">
		<div class="form-group row">
			<label for="tipo" class="col-sm-2 col-form-label col-form-label-lg">Tipo:</label>
			<input type="text" name="tipo" id="tipo" value="<%= dieta.tipo %>" class="form-control form-control-lg col-sm-8" required oninvalid="this.setCustomValidity('Campo obrigatório!')">
		</div>

		<div class="form-group row">
			<label for="intervalo" class="col-sm-2 col-form-label col-form-label-lg">Intervalo:</label>
			<input type="text" name="intervalo" id="intervalo" value="<%= dieta.intervalo %>" class="form-control form-control-lg col-sm-8">
		</div>

		<div class="form-group row">
			<label for="observacoes" class="col-sm-2 col-form-label col-form-label-lg">Observações:</label>
			<input type="text" name="observacoes" id="observacoes" value="<%= dieta.observacoes %>" class="form-control form-control-lg col-sm-8">
		</div>
		
		<div class="conjunto-botoes">
			<div class="botoes">
				<input type="submit" value="Salvar" class="form-control" onclick="alert('Dieta adicionada')">
						
	</form>

				<form action="/acolhido/<%=acolhidoId%>/prescricao/<%=prescricaoId%>/edit/dieta/<%=dieta.id%>/excluir" method="POST">
					<input type="submit" value="Excluir"  class="form-control" onclick="return confirm('Tem certeza que deseja excluir?');">
				</form>
			</div>
		</div>