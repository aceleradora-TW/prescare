<%- contentFor('body') %>
  <div class="botao-voltar">
    <a href="/acolhido/<%=acolhido.id%>">Voltar </a>
  </div>

  <p class="nome-acolhido"> Nome:
    <%= acolhido.nome %>
  </p>
  
  <form action="<%= updateUrl %>" method="POST">
      <div class="form-group row">
        <label for="nascimento" class="col-sm-2 col-form-label col-form-label-lg">Data de nascimento:</label>
        <input type="text" name="nascimento" id="nascimento" value="<%= acolhido.nascimento %>" class="form-control form-control-lg col-sm-7">
      </div>

      <div class="form-group row">
        <label for="peso" class="col-sm-2 col-form-label col-form-label-lg">Peso:</label>
        <input type="text" name="peso" id="peso" value="<%= acolhido.peso %>" class="form-control form-control-lg col-sm-7">
      </div>

      <div class="form-group row">
        <label for="alergias" class="col-sm-2 col-form-label col-form-label-lg">Alergia:</label>
        <input type="text" name="alergias" id="alergias" value="<%= acolhido.alergias %>" class="form-control form-control-lg col-sm-7">
      </div>

      <div class="form-group row">
        <label for="via_alimentacao" class="col-sm-2 col-form-label col-form-label-lg">Via Alimentação:</label>
        <input type="text" name="via_alimentacao" id="via_alimentacao" value="<%= acolhido.via_alimentacao %>" class="form-control form-control-lg col-sm-7">
      </div>

      <div class="botoes">
        <input type="submit" value="Salvar">
      </div>
      
  </form>
  
    <div class="botoes">
      <% if (user.tipo === "administrador") { %>
        <form action="/acolhido/<%=acolhido.id%>/excluir" method="POST">
          <input type="submit" value="Excluir acolhido" onclick="return confirm('Tem certeza que deseja excluir esse acolhido?')">
        </form>
      <% } %>
    </div>