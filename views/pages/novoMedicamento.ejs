<%- contentFor('body') %>
	<div class="botao-voltar">
		<a href="/acolhido/<%= acolhido.id %>/prescricao/<%= prescricao.id %>/edit">Voltar</a>
	</div>

	<div class="cabecalho-telas">
		<%- include partials/cabecalhoTelas.ejs %>
	</div>

	<div class="medicamento">
		<h1>Medicamento</h1>

		<form action="/acolhido/<%= acolhido.id %>/prescricao/<%= prescricao.id %>/medicamento" method="POST">
			<div class="form-group row">
				<label for="nome" class="col-sm-2 col-form-label col-form-label-lg">Nome:</label>
				<input type="text" name="nome" value="<%= medicamento.nome %>" class="form-control form-control-lg col-sm-8" <%if (user.tipo==="farmaceutica"
				 ) { %> disabled
				<% } %> >
			</div>

			<div class="form-group row">
				<label for="dosagem" class="col-sm-2 col-form-label col-form-label-lg">Dosagem:</label>
				<input type="text" name="dosagem" value="<%= medicamento.dosagem %>" class="form-control form-control-lg col-sm-8">
			</div>

			<div class="form-group row">
				<label for="formaFarmaceutica" class="col-sm-2 col-form-label col-form-label-lg">Forma Farmacêutica:</label>
				<input type="text" name="formaFarmaceutica" value="<%= medicamento.formaFarmaceutica %>" class="form-control form-control-lg col-sm-8">
			</div>

			<div class="form-group row">
				<label for="via" class="col-sm-2 col-form-label col-form-label-lg">Via:</label>
				<input type="text" name="via" value="<%= medicamento.via %>" class="form-control form-control-lg col-sm-8" <%if (user.tipo==="farmaceutica"
				 ) { %> disabled
				<% } %> >
			</div>

			<div class="form-group row">
				<label for="posologia" class="col-sm-2 col-form-label col-form-label-lg">Posologia: (hora-dose)</label>
				<textarea type="text" name="posologia" class="form-control form-control-lg col-sm-8"> <%= medicamento.posologia %> </textarea>
			</div>

			<div class="form-group row">
				<label for="observacoes" class="col-sm-2 col-form-label col-form-label-lg">Observações:</label>
				<input type="text" name="observacoes" value="<%= medicamento.observacoes %>" class="form-control form-control-lg col-sm-8"
				 <%if (user.tipo==="farmaceutica" ) { %> disabled
				<% } %> >
			</div>

			<div class="form-group row">
				<label for="validadeMed" class="col-sm-2 col-form-label col-form-label-lg">Validade:</label>
				<input type="text" name="validadeMed" value="<%= medicamento.validadeMed %>" class="form-control form-control-lg col-sm-8"
				 <%if (user.tipo==="farmaceutica" ) { %> disabled
				<% } %> >
			</div>

			<div class="conjunto-botoes">
				<div class="botoes">
					<form action="/acolhido/<%=acolhido.id%>/prescricao/<%=prescricao.id%>/medicamento" method="POST">
						<input type="submit" value="Salvar" onclick="alert('Medicamento adicionado')" class="form-control">
					</form>
		</form>

		<% if (user.tipo === "clinica"  || user.tipo === "neurologista") {  %>
			<form action="/acolhido/<%=acolhido.id%>/prescricao/<%=prescricao.id%>/edit/medicamento/<%=medicamento.id%>/excluir" method="POST">
				<input type="submit" value="Excluir" onclick="return confirm('Tem certeza que deseja excluir?');" class="form-control">
			</form>
			<% } %>
				</div>
				</div>
	</div>