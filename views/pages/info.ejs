<%- contentFor('body') %>
    <div class="box effect1 flex-container">
        <div class="img-acolhido">
        </div>

        <div class="inf">
            <div class="text">
                <div>
                    <p1 class="bold"> Nome: </p1>
                    <p2>
                        <%=acolhido.nome%>
                    </p2>
                </div>
                <div>
                    <p1 class="bold"> Idade: </p1>
                    <p2>
                        <%=acolhido.idade%>
                    </p2>
                </div>
                <div>
                    <p1 class="bold"> Peso: </p1>
                    <p2>
                        <%=acolhido.peso%>
                    </p2>
                    <a href="#" class="tiracor">
                        <i class="fa fa-edit edit"></i>
                    </a>
                    <span class="atualiza">Última atualização: dd/mm/aaaa </span>
                </div>
                <div>
                    <p1 class="bold"> Alergias: </p1>
                    <p2>
                        <%=acolhido.alergias%>
                    </p2>
                </div>
                <div>
                    <p1 class="bold"> Via de alimentação: </p1>
                    <p2>
                        <%=acolhido.via_alimentacao%>
                    </p2>
                </div>
            </div>
        </div>
    </div>

    <table style="margin-top:5vh;" width="100%">
        <thead>
            <tr>
            <th>ID</th>
            <th style="text-align: center;">Data</th>
            <th style="text-align: center;">Validade</th>
            <th style="text-align: right;">Ação</th>
            </tr>
        </thead>
        <tbody>
            <%for (prescricao of presc){%>
            <tr>
                <td><%= prescricao.id %></td>
                <td style="text-align: center;"><%= prescricao.data %></td>
                <td style="text-align: center;"><%= prescricao.validade %> </td>
                <td style="text-align: right;">
                    <form action="<%= acolhido.id %>/prescricao/<%= prescricao.id %>/edit" method="POST">
                        <input type="submit" value="Abrir">
                    </form>
                </td>
            </tr>
            <%}%>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4">
                    <form action="<%= acolhido.id %>/prescricao" method="POST">
                        <input type="submit" value="Criar nova prescrição">
                    </form>
                </td>
            </tr>
        </tfoot>
    </table>